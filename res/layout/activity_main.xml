<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >

    <RelativeLayout
        android:id="@+id/rlparent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ccffff" >

        <RelativeLayout
            android:id="@+id/topview1"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="#ff0000" >

             <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="S.W.Y的古风音乐专栏"
                android:textColor="#ffffff"
                android:textSize="23sp" /> 
        </RelativeLayout>

        <View
            android:id="@+id/topview2"
            android:layout_width="320dp"
            android:layout_height="2dp"
            android:layout_below="@+id/topview1"
            android:layout_marginTop="5dp"
            android:background="#ff0000" >
        </View>

        <View
            android:id="@+id/topview3"
            android:layout_width="270dp"
            android:layout_height="2dp"
            android:layout_below="@+id/topview2"
            android:layout_marginTop="5dp"
            android:background="#ff0000" >
        </View>

        <View
            android:id="@+id/topview4"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/topview3"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/leftview4"
            android:background="#ff0000" >
        </View>

        <View
            android:id="@+id/viewleft"
            android:layout_width="2dp"
            android:layout_height="38dp"
            android:layout_below="@+id/topview4"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@+id/leftview4"
            android:background="#ff0000" >
        </View>

        <ImageView
            android:id="@+id/lefttupian"
            android:layout_width="45dp"
            android:layout_height="30dp"
            android:layout_below="@+id/topview4"
            android:layout_marginLeft="99dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/leftview4"
            android:src="@drawable/left" >
        </ImageView>

        <Button
            android:id="@+id/btn_texton"
            android:layout_width="120dp"
            android:layout_height="32dp"
            android:layout_below="@+id/topview4"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/leftview4"
            android:background="@null" >
        </Button>

        <TextView
            android:id="@+id/text_music"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/topview4"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/leftview4"
            android:text="音乐列表"
            android:textColor="#ff0000"
            android:textSize="20sp" >
        </TextView>

        <ImageView
            android:id="@+id/righttupian"
            android:layout_width="45dp"
            android:layout_height="30dp"
            android:layout_below="@+id/topview4"
            android:layout_marginLeft="-15dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/text_music"
            android:src="@drawable/right" >
        </ImageView>

        <Button
            android:id="@+id/btn_textoff"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_below="@+id/topview4"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/text_music"
            android:background="@null" >
        </Button>

        <View
            android:id="@+id/viewright"
            android:layout_width="2dp"
            android:layout_height="38dp"
            android:layout_below="@+id/topview4"
            android:layout_marginLeft="128dp"
            android:layout_toRightOf="@+id/text_music"
            android:background="#ff0000" >
        </View>

        <View
            android:id="@+id/topview7"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/text_music"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/leftview4"
            android:background="#ff0000" >
        </View>

        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/text_music"
            android:layout_marginBottom="120dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/leftview4" >

            <ListView
                android:id="@+id/lv"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
            </ListView>
        </RelativeLayout>

        <View
            android:id="@+id/leftview1"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#ff0000" >
        </View>

        <View
            android:id="@+id/leftview3"
            android:layout_width="2dp"
            android:layout_height="450dp"
            android:layout_marginLeft="7dp"
            android:background="#ff0000" >
        </View>

        <View
            android:id="@+id/leftview4"
            android:layout_width="2dp"
            android:layout_height="400dp"
            android:layout_marginLeft="14dp"
            android:background="#ff0000" >
        </View>

        <RelativeLayout
            android:id="@+id/bottomview"
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:layout_alignParentBottom="true"
            android:background="#ff0000" >

            <View
                android:id="@+id/top1"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="20dp"
                android:background="#ffffff" >
            </View>

            <View
                android:id="@+id/topview6"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="15dp"
                android:background="#ffffff" >
            </View>

            <ImageButton
                android:id="@+id/btn_last"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_below="@+id/top1"
                android:layout_marginLeft="25dp"
                android:layout_toRightOf="@+id/btn_cycle"
                android:background="@drawable/last" >
            </ImageButton>

            <ImageButton
                android:id="@+id/btn_play"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_below="@+id/top1"
                android:layout_marginLeft="25dp"
                android:layout_toRightOf="@+id/btn_last"
                android:background="@drawable/play" >
            </ImageButton>

            <ImageButton
                android:id="@+id/btn_next"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_below="@+id/top1"
                android:layout_marginLeft="25dp"
                android:layout_toRightOf="@+id/btn_play"
                android:background="@drawable/next" >
            </ImageButton>

            <Button
                android:id="@+id/btn_onlythis"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:layout_below="@+id/top1"
                android:layout_marginLeft="15dp"
                android:background="@null"
                android:src="@drawable/onlythis"
                android:text="单曲循环"
                android:textColor="#ffffff"
                android:textSize="16sp" >
            </Button>

            <Button
                android:id="@+id/btn_cycle"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:layout_below="@+id/top1"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/btn_onlythis"
                android:background="@null"
                android:src="@drawable/onlythis"
                android:text="全部循环"
                android:textColor="#ffffff"
                android:textSize="16sp" >
            </Button>

            <View
                android:id="@+id/top2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/btn_last"
                android:layout_marginTop="-3dp"
                android:background="#ffffff" >
            </View>

            <View
                android:id="@+id/top9"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/btn_last"
                android:layout_marginTop="2dp"
                android:background="#ffffff" >
            </View>

            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_last"
                android:layout_marginTop="5dp" />

             <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="85dp"
                android:background="@null"
                android:text="邵旺运201421111070"
                android:textColor="#ffffff"
                android:textSize="20sp" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>